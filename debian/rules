#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with systemd

override_dh_installinit:
	dh_installinit --name=mediacenter --no-restart-on-upgrade --no-start
	dh_installinit --name=manual-update --no-restart-on-upgrade --no-start
	
override_dh_systemd_enable:
	dh_systemd_enable --name=mediacenter
	dh_systemd_enable --name=manual-update
	
override_dh_systemd_start:
	dh_systemd_start --name=mediacenter
	dh_systemd_start --name=manual-update